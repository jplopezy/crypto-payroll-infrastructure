# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Secrets Manager
EXTERNAL_API_SECRET_NAME=crypto-payroll/external-signing-api-key
DATABASE_SECRET_NAME=crypto-payroll/database-credentials
JWT_SECRET_NAME=crypto-payroll/jwt-signing-key

# S3 Configuration
S3_BUCKET_NAME=your-crypto-payroll-bucket
S3_BACKUP_BUCKET_NAME=your-crypto-payroll-backup-bucket

# External API Configuration
EXTERNAL_API_BASE_URL=https://api.fireblocks.io/v1
EXTERNAL_API_TIMEOUT=30000

# Security Configuration
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (if using RDS)
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=crypto_payroll
DB_USERNAME=crypto_payroll_user
DB_PASSWORD=your-secure-password

# Redis Configuration (for sessions)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
