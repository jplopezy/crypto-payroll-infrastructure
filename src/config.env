# Environment Configuration for Docker Container
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# AWS Configuration (will be overridden by ECS task definition)
AWS_REGION=us-east-1

# Secrets Manager
EXTERNAL_API_SECRET_NAME=crypto-payroll/external-signing-api-key
DATABASE_SECRET_NAME=crypto-payroll/database-credentials
JWT_SECRET_NAME=crypto-payroll/jwt-signing-key

# S3 Configuration (will be overridden by ECS task definition)
S3_BUCKET_NAME=placeholder-bucket

# External API Configuration
EXTERNAL_API_BASE_URL=https://api.fireblocks.io/v1
EXTERNAL_API_TIMEOUT=30000

# Security Configuration
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
